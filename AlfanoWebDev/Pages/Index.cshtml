        function showDetail(id, element) {
            // 1. Hide all panels first
            const panels = document.querySelectorAll('.detail-panel');
            panels.forEach(p => p.classList.remove('active'));

            // 2. Remove active styling from all buttons
            const buttons = document.querySelectorAll('.infra-item');
            buttons.forEach(b => b.classList.remove('active-selection'));

            // 3. Show the selected panel
            const activePanel = document.getElementById('detail-' + id);
            if (activePanel) {
                activePanel.classList.add('active');
            }

            // 4. Highlight the clicked button
            element.classList.add('active-selection');
        }
    </script>
