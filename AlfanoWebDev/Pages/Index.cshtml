@page
@model IndexModel
@{
    ViewData["Title"] = "Alfano Tech Portfolio";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        /* =========================================
                   CORE DESIGN SYSTEM & VARIABLES
                   ========================================= */
        :root {
            /* Palette: MATRIX / HARDWARE GREEN THEME */
            --bg-body: #050505; /* Pitch Black */
            --bg-surface: #0f1110; /* Very Dark Grey */
            --bg-accent: #1f2923; /* Dark Greenish Grey */
            /* The "Illumination" Color */
            --brand-primary: #00ff41; /* Cyberpunk/Terminal Green */
            --brand-glow: rgba(0, 255, 65, 0.15);
            /* Typography */
            --text-heading: #ffffff;
            --text-body: #e2e8f0;
            /* Brand Identity Colors */
            --brand-linkedin: #0077b5;
            --brand-github: #ffffff;
            --brand-github-bg: #181717;
        }

        /* Reset & Base Typography */
        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
            background-color: var(--bg-body);
            color: var(--text-heading);
            margin: 0;
            padding: 0;
            line-height: 1.7;
            -webkit-font-smoothing: antialiased;
        }

        h1, h2, h3, h4, h5, h6 {
            margin-top: 0;
            font-weight: 700;
            letter-spacing: -0.025em;
            color: var(--text-heading);
        }

        p {
            color: var(--text-body);
        }

        /* =========================================
                   COMPONENT: CARDS & SECTIONS
                   ========================================= */
        .tech-section {
            padding: 5rem 2rem;
            max-width: 1400px;
            margin: 0 auto;
            border-bottom: 1px solid var(--bg-accent);
        }

        .card {
            background-color: var(--bg-surface);
            border: 1px solid var(--bg-accent);
            color: var(--text-body);
        }

        .section-header {
            text-align: center;
            margin-bottom: 3rem;
            font-size: 2.5rem;
            /* Green Gradient Text */
            background: linear-gradient(to right, #ffffff, var(--brand-primary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* =========================================
                   COMPONENT: INTERACTIVE INFRASTRUCTURE GRID
                   ========================================= */
        .infra-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .infra-item {
            background: var(--bg-surface);
            padding: 2.5rem;
            border-radius: 16px;
            text-align: center;
            cursor: pointer;
            border: 1px solid var(--bg-accent);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

            .infra-item:hover {
                transform: translateY(-5px);
                border-color: var(--brand-primary);
                box-shadow: 0 0 20px var(--brand-glow);
            }

            .infra-item.active-selection {
                border-color: var(--brand-primary);
                background: #0a1f0a; /* Dark Green Tint */
                box-shadow: 0 0 0 2px var(--brand-primary);
            }

        .icon-display {
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
            display: block;
            color: var(--brand-primary); /* Green Icons */
        }

        .infra-label {
            font-weight: 600;
            font-size: 1.25rem;
            color: var(--text-heading);
        }

        /* DETAIL PANEL */
        .detail-panel {
            display: none;
            background: var(--bg-surface);
            padding: 3rem;
            border-radius: 16px;
            border-left: 4px solid var(--brand-primary);
            margin-top: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }

            .detail-panel.active {
                display: block;
                animation: fadeIn 0.5s ease-in-out;
            }

        .detail-title {
            font-size: 1.75rem;
            margin-bottom: 1rem;
            color: var(--brand-primary);
        }

        /* =========================================
                   COMPONENT: PROJECT CARDS (High Contrast)
                   ========================================= */
        .project-card {
            background: var(--bg-surface);
            padding: 2.5rem;
            border-radius: 16px;
            border: 1px solid var(--bg-accent);
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .project-title {
            font-size: 2rem;
            color: var(--text-heading);
            margin-bottom: 1rem;
            border-bottom: 1px solid var(--bg-accent);
            padding-bottom: 1rem;
        }

        .project-description {
            color: var(--text-body) !important;
            font-size: 1.1rem;
            opacity: 1;
            text-align: left;
            margin-top: 1rem;
            font-weight: 400;
            flex-grow: 1;
        }

        /* =========================================
                   COMPONENT: SOCIAL BUTTONS (Brand Colors)
                   ========================================= */
        .social-btn {
            text-decoration: none;
            font-weight: 700;
            font-size: 1rem;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            color: white;
            border: none;
        }

        .btn-green-glow {
            background-color: transparent;
            border: 1px solid var(--brand-primary);
            color: var(--brand-primary);
        }

            .btn-green-glow:hover {
                background-color: var(--brand-primary);
                color: black;
                box-shadow: 0 0 20px var(--brand-glow);
            }

        .btn-linkedin {
            background-color: var(--brand-linkedin);
        }

            .btn-linkedin:hover {
                background-color: #006097;
                color: white;
            }

        .btn-instagram {
            background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
        }

            .btn-instagram:hover {
                opacity: 0.9;
                color: white;
            }

        .btn-github {
            background-color: #24292e;
            border: 1px solid #ffffff;
        }

            .btn-github:hover {
                background-color: #ffffff;
                color: black;
            }

        /* =========================================
                   COMPONENT: DEEP DIVE STACK
                   ========================================= */
        .stack-entry {
            margin-bottom: 4rem;
            border-left: 4px solid var(--brand-primary);
            padding-left: 2.5rem;
            position: relative;
        }

        .stack-title {
            font-size: 2rem;
            color: var(--text-heading);
            margin-bottom: 1.5rem;
        }

        /* Form Inputs Override (Green Focus) */
        .form-control {
            background-color: #0f1110;
            border: 1px solid var(--bg-accent);
            color: white;
        }

            .form-control:focus {
                background-color: #0f1110;
                color: white;
                border-color: var(--brand-primary);
                box-shadow: 0 0 10px var(--brand-glow);
            }

        /* Animation Fix for Razor Pages */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
